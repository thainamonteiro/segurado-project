<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ProjetoSegurado</display-name>
  <servlet>
    <servlet-name>seguradoControllerServlet</servlet-name>
    <servlet-class>controller.SeguradoController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>loginControllerServlet</servlet-name>
    <servlet-class>controller.LoginController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>seguroControllerServlet</servlet-name>
    <servlet-class>controller.SeguroController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>listaSegurosServlet</servlet-name>
    <servlet-class>controller.ListaSeguros</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>listaSeguradosServlet</servlet-name>
    <servlet-class>controller.ListaSegurados</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>seguradoControllerServlet</servlet-name>
    <url-pattern>/seguro/seguradoControllerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>loginControllerServlet</servlet-name>
    <url-pattern>/loginControllerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>seguroControllerServlet</servlet-name>
    <url-pattern>/seguro/seguroControllerServlet</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>listaSegurosServlet</servlet-name>
    <url-pattern>/seguro/listaSegurosServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>listaSeguradosServlet</servlet-name>
    <url-pattern>/seguro/listaSeguradosServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>controller.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>/login.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>FiltroSeguranca</filter-name>
    <filter-class>
		controller.FiltroSeguranca
	</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroSeguranca</filter-name>
    <url-pattern>/seguro/*</url-pattern>
  </filter-mapping>
</web-app>